<!doctype html>
<html>
<head>
    <title>Name lookup</title>
    <link rel="stylesheet" href="/lib/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-material-design/0.2.1/css/material.min.css">

    <script src="/lib/jquery/2.1.3/jquery.min.js"></script>
    <script src="/lib/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script src="/lib/bootstrap-material-design/0.2.1/js/material.min.js"></script>

    <style>
        .container {
            max-width: 40em;
            margin-top: 2em;
        }
        dt {
            width: inherit !important;
        }
        #url {
            font: Source Code Pro, monospaced;
            width: 100%;
            margin-top: 5em;
            cursor: inherit;
        }
    </style>
</head>
<body>
<div class="container">
    <form id="view" onsubmit="window.location = '/' + $('#uu').val(); return false">
        <div class="input-group">
            <input id="uu" type="text" class="form-control" placeholder="UUID or Username" autofocus>
            <span class="input-group-btn">
                <input class="btn btn-default" type="submit" value="Go" tabIndex="-1">
            </span>
        </div>
    </form>
    {{# block "content"}}{{/block}}

    <input id="url" type="text" value="{{block "url"}}"
           style="" class="form-control" readonly>
</div>
</body>
</html>